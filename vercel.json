{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/bundle.js$",
      "headers": { "Content-Type": "application/javascript" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/timezones.json",
      "dest": "/public/timezones.json"
    }
  ]
}
